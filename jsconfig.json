{
  "compilerOptions": {
    "baseUrl": "./",
    "module": "ES6",
    "paths": {
      "components": ["src/components"],
      "components/*": ["src/components/*"],
      "helpers": ["src/helpers"],
      "helpers/*": ["src/helpers/*"],
      "locales": ["src/locales"],
      "locales/*": ["src/locales/*"],
      "stores": ["src/stores"],
      "stores/*": ["src/stores/*"],
      "styles": ["src/styles"],
      "styles/*": ["src/styles/*"],
      "views": ["src/views"],
      "views/*": ["src/views/*"]
    }
  },
  "exclude": ["node_modules", "dist"]
}
